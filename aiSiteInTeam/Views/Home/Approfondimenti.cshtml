@{
    ViewData["Title"] = "Approfondimenti sui Modelli di IA";
}

<!-- Header Section -->
<header>
    <nav class="custom-navbar">
        <div class="nav-container">
            <a class="navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index">aiSiteInTeam</a>
            <button class="mobile-toggle" type="button" onclick="toggleMobileMenu()">
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
                <span class="hamburger-line"></span>
            </button>
            <div class="nav-links" id="navLinks">
                <ul class="nav-menu">
                    <li class="nav-item-custom">
                        <a class="nav-link-custom" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item-custom">
                        <a class="nav-link-custom current-page">Approfondimenti</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Custom Navbar Styles */
        .custom-navbar {
            background: rgba(12, 12, 12, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1rem 0;
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }

        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar-brand-custom {
            font-size: 1.8rem;
            font-weight: 800;
            background: linear-gradient(45deg, #00d4ff, #ff00aa);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .navbar-brand-custom:hover {
            transform: scale(1.05);
            filter: brightness(1.2);
        }

        .nav-menu {
            display: flex;
            list-style: none;
            gap: 2rem;
            align-items: center;
        }

        .nav-item-custom {
            position: relative;
        }

        .nav-link-custom {
            color: #ffffff;
            text-decoration: none;
            font-weight: 500;
            padding: 0.5rem 1rem;
            border-radius: 25px;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .nav-link-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.6s;
        }

        .nav-link-custom:hover::before {
            left: 100%;
        }

        .nav-link-custom:hover {
            color: #00d4ff;
            background: rgba(0, 212, 255, 0.1);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 212, 255, 0.3);
        }

        .nav-link-custom.current-page {
            background: linear-gradient(45deg, #00d4ff, #ff00aa);
            color: white;
            box-shadow: 0 5px 15px rgba(0, 212, 255, 0.4);
        }

        .mobile-toggle {
            display: none;
            background: none;
            border: none;
            flex-direction: column;
            cursor: pointer;
            padding: 0.5rem;
        }

        .hamburger-line {
            width: 25px;
            height: 3px;
            background: linear-gradient(45deg, #00d4ff, #ff00aa);
            margin: 3px 0;
            transition: 0.3s;
            border-radius: 2px;
        }

        /* Mobile Styles */
        @@media (max-width: 768px) {
            .mobile-toggle {
                display: flex;
            }

            .nav-links {
                position: absolute;
                top: 100%;
                left: 0;
                right: 0;
                background: rgba(12, 12, 12, 0.95);
                backdrop-filter: blur(20px);
                border-top: 1px solid rgba(255, 255, 255, 0.1);
                transform: translateY(-100%);
                opacity: 0;
                visibility: hidden;
                transition: all 0.3s ease;
            }

            .nav-links.active {
                transform: translateY(0);
                opacity: 1;
                visibility: visible;
            }

            .nav-menu {
                flex-direction: column;
                padding: 1rem 0;
                gap: 0;
            }

            .nav-link-custom {
                padding: 1rem 2rem;
                width: 100%;
                text-align: center;
                border-radius: 0;
            }

            .nav-container {
                padding: 0 1rem;
            }
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0c0c0c 0%, #1a1a2e 50%, #16213e 100%);
            color: #ffffff;
            line-height: 1.6;
            overflow-x: hidden;
            padding-top: 80px; /* Space for fixed navbar */
        }

        .hero-section {
            height: calc(100vh - 80px); /* Adjust for navbar height */
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            background: radial-gradient(ellipse at center, rgba(138, 43, 226, 0.1) 0%, transparent 70%);
        }

        .hero-content {
            text-align: center;
            z-index: 2;
            animation: fadeInUp 1s ease-out;
        }

        .hero-title {
            font-size: 4rem;
            font-weight: 800;
            background: linear-gradient(45deg, #00d4ff, #ff00aa, #ffaa00);
            background-size: 300% 300%;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            animation: gradientShift 3s ease-in-out infinite;
            margin-bottom: 1rem;
        }

        .hero-subtitle {
            font-size: 1.5rem;
            color: #b0b0b0;
            margin-bottom: 2rem;
            animation: fadeInUp 1s ease-out 0.3s both;
        }

        .floating-particles {
            position: absolute;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

        .particle {
            position: absolute;
            width: 4px;
            height: 4px;
            background: #00d4ff;
            border-radius: 50%;
            animation: float 6s ease-in-out infinite;
        }

        .models-container {
            padding: 5rem 2rem;
            max-width: 1400px;
            margin: 0 auto;
        }

        .section-title {
            text-align: center;
            font-size: 3rem;
            margin-bottom: 3rem;
            background: linear-gradient(135deg, #ffffff, #b0b0b0);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .models-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
            gap: 2rem;
            margin-bottom: 5rem;
        }

        .model-card {
            background: linear-gradient(145deg, rgba(255,255,255,0.1), rgba(255,255,255,0.05));
            border-radius: 20px;
            padding: 2rem;
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255,255,255,0.1);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

        .model-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            transition: left 0.6s;
        }

        .model-card:hover::before {
            left: 100%;
        }

        .model-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 20px 40px rgba(0, 212, 255, 0.2);
        }

        .model-header {
            display: flex;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .model-icon {
            width: 60px;
            height: 60px;
            border-radius: 15px;
            margin-right: 1rem;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
        }

        .claude-icon { background: linear-gradient(135deg, #ff6b6b, #ff8e8e); }
        .gpt-icon { background: linear-gradient(135deg, #00d4ff, #0099cc); }
        .deepseek-icon { background: linear-gradient(135deg, #8b5cf6, #a855f7); }
        .gemini-icon { background: linear-gradient(135deg, #fbbf24, #f59e0b); }
        .llama-icon { background: linear-gradient(135deg, #10b981, #059669); }

        .model-name {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .model-company {
            color: #b0b0b0;
            font-size: 1rem;
        }

        .model-description {
            color: #d0d0d0;
            margin-bottom: 1.5rem;
            line-height: 1.8;
        }

        .model-features {
            list-style: none;
        }

        .model-features li {
            padding: 0.5rem 0;
            border-bottom: 1px solid rgba(255,255,255,0.1);
            position: relative;
            padding-left: 2rem;
        }

        .model-features li::before {
            content: '⚡';
            position: absolute;
            left: 0;
            color: #00d4ff;
        }

        .comparison-section {
            background: rgba(255,255,255,0.05);
            border-radius: 30px;
            padding: 3rem;
            margin: 3rem 0;
            backdrop-filter: blur(20px);
        }

        .comparison-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 2rem;
        }

        .comparison-table th,
        .comparison-table td {
            padding: 1rem;
            text-align: left;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .comparison-table th {
            background: rgba(0, 212, 255, 0.1);
            font-weight: 600;
        }

        .comparison-table tr:hover {
            background: rgba(255,255,255,0.05);
        }

        .future-section {
            text-align: center;
            padding: 5rem 2rem;
            background: radial-gradient(ellipse at center, rgba(138, 43, 226, 0.2) 0%, transparent 70%);
        }

        .future-title {
            font-size: 2.5rem;
            margin-bottom: 2rem;
            background: linear-gradient(45deg, #ff00aa, #00d4ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .cta-button {
            display: inline-block;
            padding: 1rem 2rem;
            background: linear-gradient(45deg, #00d4ff, #ff00aa);
            color: white;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 10px 30px rgba(0, 212, 255, 0.3);
        }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 40px rgba(0, 212, 255, 0.5);
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes gradientShift {
            0%, 100% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            33% { transform: translateY(-20px) rotate(120deg); }
            66% { transform: translateY(10px) rotate(240deg); }
        }

        @@media (max-width: 768px) {
            .hero-title { font-size: 2.5rem; }
            .hero-subtitle { font-size: 1.2rem; }
            .models-grid { grid-template-columns: 1fr; }
            .model-card { padding: 1.5rem; }
            .section-title { font-size: 2rem; }
        }
    </style>
</head>