@{
    ViewData["Title"] = "Contact Us";
}

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background: #0a0a0a;
        color: #ffffff;
        overflow-x: hidden;
        line-height: 1.6;
    }

    /* Navigation Header */
    .navbar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
        background: rgba(10, 10, 10, 0.98);
        backdrop-filter: blur(25px);
        border-bottom: 1px solid rgba(64, 224, 208, 0.15);
        padding: 20px 0;
        transition: all 0.3s ease;
        box-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
    }

    .nav-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 0 40px;
        height: 60px;
    }

    .logo {
        font-size: 26px;
        font-weight: 800;
        background: linear-gradient(135deg, #40e0d0, #00bcd4, #0097a7);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(64, 224, 208, 0.3);
    }

    .nav-links {
        display: flex;
        list-style: none;
        gap: 35px;
        margin: 0;
        padding: 0;
    }

        .nav-links li {
            margin: 0;
            padding: 0;
        }

        .nav-links a {
            color: #ffffff;
            text-decoration: none;
            font-weight: 500;
            position: relative;
            transition: all 0.3s ease;
            padding: 12px 20px;
            border-radius: 10px;
            font-size: 16px;
            display: block;
        }

            .nav-links a:hover {
                color: #40e0d0;
                background: rgba(64, 224, 208, 0.1);
                transform: translateY(-2px);
            }

            .nav-links a.active {
                color: #40e0d0;
                background: rgba(64, 224, 208, 0.15);
            }

    /* Main Container */
    .main-container {
        min-height: 100vh;
        padding-top: 120px;
        background: linear-gradient(135deg, rgba(64, 224, 208, 0.05) 0%, rgba(10, 10, 10, 0.95) 50%);
        position: relative;
    }

        .main-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="grid" width="10" height="10" patternUnits="userSpaceOnUse"><path d="M 10 0 L 0 0 0 10" fill="none" stroke="%2340e0d0" stroke-width="0.3" opacity="0.1"/></pattern></defs><rect width="100" height="100" fill="url(%23grid)"/></svg>');
            animation: grid-move 25s linear infinite;
            pointer-events: none;
        }

    @@keyframes grid-move {
        0% {
            transform: translate(0, 0);
        }

        100% {
            transform: translate(10px, 10px);
        }
    }

    /* Contact Section */
    .contact-section {
        max-width: 1200px;
        margin: 0 auto;
        padding: 60px 40px;
        position: relative;
        z-index: 2;
    }

    .contact-header {
        text-align: center;
        margin-bottom: 80px;
    }

    .contact-title {
        font-size: clamp(3rem, 6vw, 4.5rem);
        font-weight: 800;
        margin-bottom: 20px;
        background: linear-gradient(135deg, #ffffff 0%, #40e0d0 50%, #00bcd4 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        text-shadow: 0 0 30px rgba(64, 224, 208, 0.2);
    }

    .contact-subtitle {
        font-size: 1.3rem;
        color: #b0b0b0;
        font-weight: 300;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.7;
    }

    .contact-content {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 80px;
        align-items: start;
    }

    /* Contact Info */
    .contact-info {
        padding: 40px;
        background: rgba(64, 224, 208, 0.03);
        border: 1px solid rgba(64, 224, 208, 0.15);
        border-radius: 20px;
        backdrop-filter: blur(10px);
    }

        .contact-info h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 30px;
            color: #40e0d0;
        }

    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 25px;
        padding: 20px;
        background: rgba(64, 224, 208, 0.05);
        border-radius: 12px;
        transition: all 0.3s ease;
    }

        .info-item:hover {
            background: rgba(64, 224, 208, 0.1);
            transform: translateX(10px);
        }

    .info-icon {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #40e0d0, #00bcd4);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 20px;
        font-size: 1.2rem;
        flex-shrink: 0;
    }

    .info-text {
        flex: 1;
    }

    .info-label {
        font-size: 0.9rem;
        color: #b0b0b0;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 1.1rem;
        color: #ffffff;
        font-weight: 500;
    }

    /* Contact Form */
    .contact-form {
        padding: 40px;
        background: rgba(64, 224, 208, 0.03);
        border: 1px solid rgba(64, 224, 208, 0.15);
        border-radius: 20px;
        backdrop-filter: blur(10px);
    }

        .contact-form h3 {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 30px;
            color: #40e0d0;
        }

    .form-group {
        margin-bottom: 25px;
    }

    .form-label {
        display: block;
        font-size: 1rem;
        font-weight: 500;
        color: #ffffff;
        margin-bottom: 8px;
    }

    .form-input,
    .form-textarea {
        width: 100%;
        padding: 18px 20px;
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(64, 224, 208, 0.2);
        border-radius: 12px;
        color: #ffffff;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s ease;
        resize: vertical;
    }

        .form-input:focus,
        .form-textarea:focus {
            outline: none;
            border-color: #40e0d0;
            background: rgba(64, 224, 208, 0.1);
            box-shadow: 0 0 0 3px rgba(64, 224, 208, 0.1);
            transform: translateY(-2px);
        }

        .form-input::placeholder,
        .form-textarea::placeholder {
            color: #888888;
        }

    .form-textarea {
        min-height: 120px;
        max-height: 300px;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .submit-btn {
        width: 100%;
        padding: 20px;
        background: linear-gradient(135deg, #40e0d0, #00bcd4);
        border: none;
        border-radius: 12px;
        color: #ffffff;
        font-size: 1.1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 30px rgba(64, 224, 208, 0.4);
            background: linear-gradient(135deg, #00bcd4, #40e0d0);
        }

        .submit-btn:active {
            transform: translateY(-1px);
        }

    /* Success Message */
    .success-message {
        display: none;
        background: rgba(40, 167, 69, 0.1);
        border: 1px solid rgba(40, 167, 69, 0.3);
        color: #28a745;
        padding: 15px 20px;
        border-radius: 12px;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .navbar {
            padding: 15px 0;
        }

        .nav-container {
            padding: 0 20px;
            height: 50px;
        }

        .logo {
            font-size: 22px;
        }

        .nav-links {
            gap: 25px;
        }

            .nav-links a {
                padding: 10px 15px;
                font-size: 15px;
            }

        .main-container {
            padding-top: 100px;
        }

        .contact-section {
            padding: 40px 20px;
        }

        .contact-content {
            grid-template-columns: 1fr;
            gap: 50px;
        }

        .form-row {
            grid-template-columns: 1fr;
            gap: 15px;
        }

        .contact-info,
        .contact-form {
            padding: 30px 25px;
        }
    }

    @@media (max-width: 480px) {
        .navbar {
            padding: 12px 0;
        }

        .nav-container {
            height: 45px;
        }

        .logo {
            font-size: 20px;
        }

        .main-container {
            padding-top: 80px;
        }

        .nav-links {
            display: none;
        }

        .contact-info,
        .contact-form {
            padding: 25px 20px;
        }

        .info-item {
            padding: 15px;
        }

        .info-icon {
            width: 40px;
            height: 40px;
            margin-right: 15px;
        }
    }
</style>

<!-- Navigation -->
<nav class="navbar">
    <div class="nav-container">
        <div class="logo">AI Innovation</div>
        <ul class="nav-links">
            <li><a href="@Url.Action("Index", "Home")">Home</a></li>
            <li><a href="@Url.Action("Approfondimenti", "Home")">Approfondimenti</a></li>
            <li><a href="@Url.Action("ContactUs", "Home")" class="active">Contact Us</a></li>
        </ul>
    </div>
</nav>

<!-- Main Container -->
<div class="main-container">
    <div class="contact-section">
        <!-- Header -->
        <div class="contact-header">
            <h1 class="contact-title">Contattaci</h1>
            <p class="contact-subtitle">Hai un progetto in mente? Vuoi esplorare le possibilità dell'intelligenza artificiale? Il nostro team di esperti è pronto ad ascoltarti e trasformare le tue idee in realtà.</p>
        </div>

        <!-- Content -->
        <div class="contact-content">
            <!-- Contact Info -->
            <div class="contact-info">
                <h3>Informazioni di Contatto</h3>

                <div class="info-item">
                    <div class="info-icon">📧</div>
                    <div class="info-text">
                        <div class="info-label">Email</div>
                        <div class="info-value">alessandro.frau@itiscuneo.edu.it</div>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">📧</div>
                    <div class="info-text">
                        <div class="info-label">Email Partner</div>
                        <div class="info-value">pietro.duranda@itiscuneo.edu.it</div>
                    </div>
                </div>

                <div class="info-item">
                    <div class="info-icon">⏰</div>
                    <div class="info-text">
                        <div class="info-label">Orari di Disponibilità</div>
                        <div class="info-value">Lun - Ven: 8:00 - 14:00</div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="contact-form">
                <h3>Invia un Messaggio</h3>

                <div class="success-message" id="successMessage">
                    Grazie! Il tuo messaggio è stato inviato con successo. Ti contatteremo presto!
                </div>

                <form id="contactForm" method="post" action="@Url.Action("SubmitContact", "Home")">
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="firstName">Nome *</label>
                            <input type="text" id="firstName" name="FirstName" class="form-input" placeholder="Il tuo nome" required>
                        </div>
                        <div class="form-group">
                            <label class="form-label" for="lastName">Cognome *</label>
                            <input type="text" id="lastName" name="LastName" class="form-input" placeholder="Il tuo cognome" required>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" for="email">Email *</label>
                            <input type="email" id="email" name="Email" class="form-input" placeholder="tua@email.com" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="subject">Oggetto *</label>
                            <input type="text" id="subject" name="Subject" class="form-input" placeholder="Di cosa vuoi parlarci?" required>
                        </div>

                        <div class="form-group">
                            <label class="form-label" for="message">Messaggio *</label>
                            <textarea id="message" name="Message" class="form-textarea" placeholder="Descrivi il tuo progetto, le tue idee o le tue domande sull'intelligenza artificiale..." required></textarea>
                        </div>

                        <button type="submit" class="submit-btn">Invia Messaggio</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById('contactForm').addEventListener('submit', function (e) {
        e.preventDefault();

        // Simulazione invio (da sostituire con logica server-side)
        const submitBtn = document.querySelector('.submit-btn');
        const originalText = submitBtn.textContent;

        submitBtn.textContent = 'Invio in corso...';
        submitBtn.disabled = true;

        setTimeout(() => {
            document.getElementById('successMessage').style.display = 'block';
            document.getElementById('contactForm').reset();
            submitBtn.textContent = originalText;
            submitBtn.disabled = false;

            // Nascondi il messaggio dopo 5 secondi
            setTimeout(() => {
                document.getElementById('successMessage').style.display = 'none';
            }, 5000);
        }, 1500);
    });
</script>